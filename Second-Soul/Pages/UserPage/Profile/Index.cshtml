@page
@model Second_Soul.Pages.UserPage.Profile.IndexModel
@{
    Layout = "_ProfileLayout";
}
<body>
    <div class="profile-container">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="UserProfile.Username" value="@Model.UserProfile.Username" readonly>
                <small>Username can only changed one.</small>
            </div>

            <div class="form-group">
                <label for="fullname">Name</label>
                <input type="text" id="fullname" name="UserProfile.FullName" value="@Model.UserProfile.FullName">
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" id="email" name="UserProfile.Email" value="@Model.UserProfile.Email" readonly>
                <button type="submit" name="action" value="UpdateEmail">Update Email</button>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="UserProfile.PasswordHash" value="">
                <button type="submit" name="action" value="UpdatePassword">Update Password</button>
            </div>

            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="text" id="phone" name="UserProfile.PhoneNumber" value="@Model.UserProfile.PhoneNumber" readonly>
            </div>

            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="UserProfile.Address" value="@Model.UserProfile.Address" readonly>
            </div>

            <div class="form-group">
                <button type="submit" name="action" value="UpdateProfile">Save Profile</button>
            </div>

            <div class="form-group">
                <label for="image">Profile Picture</label>
                <div class="image-upload">
                    <img src="default-avatar.png" alt="Avatar">
                    <input type="file" name="PictureFile" />
                    <small>File size: maximum 1 MB</small><br>
                    <small>File extension: .JPEG, .PNG</small>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" name="action" value="UpdatePicture">Update Profile Picture</button>
            </div>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div style="color: red;">@Model.ErrorMessage</div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div style="color: lawngreen;">@Model.SuccessMessage</div>
    }
</body>

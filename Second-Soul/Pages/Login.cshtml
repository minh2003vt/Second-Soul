@page
@model Second_Soul.Pages.LoginModel
@{
}
<h1>@ViewData["Title"]</h1>

<h2 class="text-center">Login</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Welcome Back</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email" class="font-weight-bold"></label>
                            <input asp-for="Input.Email" class="form-control" required placeholder="Enter your email or Username" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" class="font-weight-bold"></label>
                            <input asp-for="Input.Password" class="form-control" type="password" required placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Log In</button>
                        </div>
                        <div class="text-center">
                            <a asp-page="/Reset" class="text-decoration-none">Forgot Password?</a>
                        </div>
                        <div class="text-center mt-2">
                            <span>Don't have an account? <a asp-page="/Register" class="text-decoration-none">Create new here</a></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

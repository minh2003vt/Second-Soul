@page "{id:int}"
@model Second_Soul.Pages.ProductPage.DetailsModel
@{
}
<div class="product-container">
    <div class="product-details">
        <div class="image-gallery">
            @if (Model.Images.Count==0)
            {
                <div class="placeholder-frame">
                    No Image Available
                </div>
            }
            else
            {
                <img src="@Model.Images.First()" alt="Ao khoac da icon" class="main-image">
            }
            <div class="thumbnail-list">
                <!-- Thumbnails can be handled similarly -->
                <img src="your-thumbnail-link-here.png" alt="Thumbnail 1">
                <img src="your-thumbnail-link-here.png" alt="Thumbnail 2">
            </div>
        </div>


        <div class="info">
            <h1>@Model.Product.Name</h1>
            <p>@Model.Product.Condition • @Model.Product.Category.CategoryName</p>
            <p class="price">@Model.Product.Price đ</p>
            <p><strong>Address: </strong>@Model.Product.Seller.Address</p>
            <p><strong>Upload at: </strong>@Model.Product.AddedDate</p>
            <form method="post">
                <input type="hidden" name="id" value="@Model.Product.ProductId"/>
                <button type="submit" name="action" value="addToCart" class="btn-add-to-cart">Add to Cart</button>
                <button type="submit" name="action" value="buyNow" class="btn-buy-now">Buy Now</button>
            </form>           
            <div class="seller-info">
                <h3>@Model.Product.Seller.Username</h3>
                <p>Phản hồi: 75% • 103 đã bán</p>
                <p><strong>Hoạt động:</strong> 2 giờ trước</p>
                <p>Đánh giá: <span class="rating">4.6 ★</span> (5 đánh giá)</p>
            </div>
        </div>
    </div>
    <div class="description-container">
        <h2>Description</h2>
        <p>
            @Model.Product.Description
        </p>
    </div>

</div>
<style>
    .product-container {
        display: flex;
        flex-direction: column;
        width: 70%;
        margin: auto;
        font-family: Arial, sans-serif;
    }

    .breadcrumbs {
        margin-bottom: 10px;
        font-size: 14px;
    }

        .breadcrumbs a {
            text-decoration: none;
            color: #007bff;
        }

    .product-details {
        display: flex;
        justify-content: space-between;
    }

    .image-gallery {
        width: 45%;
    }

    .main-image {
        width: 100%;
        height: auto;
    }

    .thumbnail-list img {
        width: 100px;
        margin: 5px;
    }

    .placeholder-frame {
        width: 100%;
        height: 300px;
        border: 2px dashed #ddd;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 18px;
        color: #999;
        background-color: #f0f0f0;
    }

    .info {
        width: 50%;
    }

        .info h1 {
            font-size: 24px;
            margin-bottom: 10px;
        }

    .price {
        font-size: 24px;
        color: red;
        margin: 10px 0;
    }

    .btn-add-to-cart, .btn-buy-now {
        padding: 10px;
        margin-right: 10px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 10px;
    }

    .btn-add-to-cart {
        background-color: #007bff;
    }

    .btn-buy-now {
        background-color: #ffc107;
    }


    .seller-info {
        margin-top: 20px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

        .seller-info h3 {
            font-size: 20px;
        }

    .rating {
        color: gold;
        font-weight: bold;
    }

    .description-container {
        margin-top: 20px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .description-container h2 {
            font-size: 22px;
            margin-bottom: 10px;
        }

    .questions {
        margin-top: 20px;
    }

    .btn-question {
        padding: 10px 15px;
        margin-right: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
</style>

